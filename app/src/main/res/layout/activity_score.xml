<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".FitnessScore"
    tools:showIn="@layout/app_bar_main">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:gravity="center"
        android:id="@+id/textView8"
        android:background="#ff0099cc"
        android:textColor="#fafafa"
        android:textSize="40dp"
        android:layout_weight="0.30"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Improve Fitness Score By Setting Goal"
        android:id="@+id/textView9"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Goal Name"
        android:id="@+id/goalName"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Goal Description ... "
        android:id="@+id/goalDescrip"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="30dp"/>

<Button
    android:id="@+id/SetGoal"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:text="Set My Goal"
    android:layout_marginTop="300dp"
    android:layout_marginLeft="30dp"
    android:gravity="center_horizontal"/>

</RelativeLayout>
